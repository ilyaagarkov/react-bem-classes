{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "target": "es6",
    "lib": ["es2017", "dom"],
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "typeRoots" : [
      "node_modules/@types",
      "node_modules/*",
      "src/types/*"
    ]
  },
  "include": [
    "src/**/*",
  ]
}
